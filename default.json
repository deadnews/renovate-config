{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignAutomerge": true,
  "assignees": ["deadnews"],
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "dependencyDashboard": true,
  "description": "Preset: update on the 1st Saturday of each month",
  "extends": ["config:base"],
  "labels": ["deps"],
  "packageRules": [
    {
      "description": "Group packages by package manager",
      "groupName": "{{manager}} dependencies",
      "groupSlug": "{{manager}}",
      "matchPackagePatterns": ["*"]
    },
    {
      "addLabels": ["github-actions"],
      "description": "GitHub Actions: group updates",
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci"
    },
    {
      "addLabels": ["pre-commit"],
      "description": "Pre-commit: group updates",
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "semanticCommitType": "ci"
    },
    {
      "description": "typos: update once a year on Jan 1st",
      "matchManagers": ["pre-commit"],
      "matchPackageNames": ["crate-ci/typos"],
      "schedule": ["* 16-23 1 1 *"]
    },
    {
      "addLabels": ["docker"],
      "description": "Docker tags: dockerfile",
      "groupName": "docker tags",
      "matchManagers": ["dockerfile"],
      "pinDigests": true,
      "semanticCommitType": "build"
    },
    {
      "addLabels": ["docker"],
      "description": "Docker tags: compose",
      "groupName": "docker tags",
      "matchManagers": ["docker-compose"],
      "semanticCommitType": "build"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "schedule": ["* 0-10 1-7 * 6"],
  "semanticCommits": "enabled",
  "separateMajorMinor": false
}
