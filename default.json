{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignAutomerge": true,
  "assignees": ["deadnews"],
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Detect dependencies in Dockerfile",
      "fileMatch": ["(^|/)Dockerfile[^/]*$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) dep_name=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "semanticCommitType": "build",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "description": "Testcontainers: detect Docker images",
      "fileMatch": ["main_test.go$"],
      "matchStrings": [
        "Image:\\s*\"(?<depName>[\\w\\-/]+):(?<currentValue>[\\w\\.\\-]+)\""
      ],
      "semanticCommitType": "test",
      "versioningTemplate": "docker"
    }
  ],
  "dependencyDashboard": true,
  "description": "Preset: update on the 1st Saturday of each month",
  "extends": ["config:base"],
  "labels": ["deps"],
  "packageRules": [
    {
      "description": "Group packages by package manager",
      "groupName": "{{manager}} dependencies",
      "groupSlug": "{{manager}}",
      "matchPackagePatterns": ["*"]
    },
    {
      "addLabels": ["github-actions"],
      "description": "GitHub Actions: group updates",
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci"
    },
    {
      "description": "Lock files: refresh for matching managers",
      "lockFileMaintenance": {
        "enabled": true
      },
      "matchManagers": ["pep621", "cargo"]
    },
    {
      "addLabels": ["pre-commit"],
      "description": "Pre-commit: group updates",
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "semanticCommitType": "ci"
    },
    {
      "addLabels": ["ansible-galaxy"],
      "description": "Ansible Galaxy: group updates",
      "groupName": "ansible-galaxy requirements",
      "matchManagers": ["ansible-galaxy"]
    },
    {
      "addLabels": ["docker"],
      "description": "Docker tags: group updates",
      "groupName": "docker tags",
      "matchManagers": ["docker-compose", "dockerfile"],
      "pinDigests": true,
      "semanticCommitType": "build"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 1,
  "pre-commit": {
    "enabled": true
  },
  "schedule": ["* 0-10 1-7 * 6"],
  "semanticCommits": "enabled",
  "separateMajorMinor": false
}
